                  <ImageView fitHeight="150.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@bike.png" />
                     </image>
                  </ImageView>
                  <ChoiceBox fx:id="modifyCourierChoice" prefHeight="46.0" prefWidth="149.0" />
               </children>
            </HBox>
            <Button fx:id="modifyButton" layoutX="220.0" layoutY="240.0" mnemonicParsing="false" onAction="#modifyDeliveryPoint" prefHeight="40.0" prefWidth="60.0" text="OK" />
            <Button fx:id="deleteButton" layoutX="20.0" layoutY="240.0" mnemonicParsing="false" onAction="#deleteDeliveryPoint" text="Delete Point" />
         </children>
      </Pane>
      <Group fx:id="groupScrollable" StackPane.alignment="TOP_RIGHT">
         <ScrollPane fx:id="scrollPane" maxHeight="1000.0">
            <VBox fx:id="tourListGroup" disable="false" visible="true">
               <padding>
                  <Insets right="10.0" />
               </padding>
            </VBox>
         </ScrollPane>
         <StackPane.margin>
            <Insets right="20.0" top="20.0" />
         </StackPane.margin></Group>
      
      <Group StackPane.alignment="TOP_RIGHT" visible="false">
         <VBox disable="false" visible="true">
            <TitledPane alignment="CENTER_RIGHT">
               <graphic>
                  <HBox prefHeight="0.0" prefWidth="133.0" >
                     <Circle fill="red" radius="8.75" stroke="BLACK" strokeWidth="1.2" />   
                     <Label alignment="CENTER" prefHeight="18.0" prefWidth="87.0" style="-fx-font-weight: bold; -fx-text-fill: white;" text="Courier : 1" textFill="WHITE" />
                  </HBox>
               </graphic>
               
               <content>
                  <VBox>
                     <Label text="Delivery Point 1" />

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="h4131.view.DisplayMapSceneController">
   <children>
      <VBox fx:id="layout" />
      <Group layoutX="100.0" StackPane.alignment="TOP_LEFT">
         <children>
            <Button layoutX="20.0" mnemonicParsing="false" onAction="#doLoadTour" prefWidth="200.0" text="Load a tour">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Button>
            <ChoiceBox fx:id="mapChoiceBox" layoutX="20.0" layoutY="100.0" prefWidth="200.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </ChoiceBox>
            <Button fx:id="loadMapButton" layoutX="20.0" layoutY="175.0" mnemonicParsing="false" onAction="#doLoadMap" prefWidth="200.0" text="Load chosen map">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </Button>
         </children>
         <StackPane.margin>
            <Insets left="20.0" top="20.0" />
         </StackPane.margin>
      </Group>
   </children>
</StackPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="h4131.view.DisplayMapSceneController">
   <children>
      <VBox fx:id="layout" />
      <Group layoutX="100.0" StackPane.alignment="TOP_LEFT">
         <children>
            <Button layoutX="20.0" mnemonicParsing="false" onAction="#doLoadTour" prefWidth="200.0" text="Load a tour">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Button>
            <ChoiceBox fx:id="mapChoiceBox" layoutX="20.0" layoutY="100.0" prefWidth="200.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </ChoiceBox>
            <Button fx:id="loadMapButton" layoutX="20.0" layoutY="175.0" mnemonicParsing="false" onAction="#doLoadMap" prefWidth="200.0" text="Load chosen map">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
               <font>
                  <Font name="System Bold" size="18.0" />
               </font></Button>
            <Text fill="WHITE" layoutX="20.0" layoutY="250.0" text="Number of courier(s) : ">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font></Text>
            <TextField fx:id="numberOfCourierField" layoutX="190.0" layoutY="235.0" onKeyReleased="#onNumberOfCouriersChanged" prefWidth="30.0" />
         </children>
         <StackPane.margin>
            <Insets left="20.0" top="20.0" />
         </StackPane.margin>
      </Group>
      <Group fx:id="validationGroup" disable="true" layoutX="499.0" layoutY="500.0" visible="false">
         <children>
            <TextArea fx:id="idIntersection" prefHeight="120.0" prefWidth="200.0" text="Intersection 101010101010">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </TextArea>
            <ChoiceBox fx:id="timeWindowChoice" layoutX="20.0" layoutY="60.0" prefWidth="150.0" />
            <ChoiceBox fx:id="courierChoice" layoutX="20.0" layoutY="30.0" prefWidth="150.0" />
            <Button fx:id="validationButton" layoutX="138.0" layoutY="90.0" mnemonicParsing="false" onAction="#validateInformation" text="OK" />
            <Button fx:id="cancelButton" layoutX="85.0" layoutY="90.0" mnemonicParsing="false" onAction="#cancelIntersection" text="Cancel" />
         </children>
      </Group>
   </children>
</StackPane>

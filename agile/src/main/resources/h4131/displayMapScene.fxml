            <Text fx:id="courierChangeAlert" layoutX="366.0" layoutY="45.0" text="3" textAlignment="CENTER">
            </Text>
         </Pane>
         
         <StackPane.margin>
            <Insets top="20.0" />
         </StackPane.margin>
      </Group>
      <Pane fx:id="validationPane" maxHeight="300.0" maxWidth="300.0" prefHeight="300.0" prefWidth="300.0" visible="false" StackPane.alignment="CENTER">

                     <image>
                        <Image url="@clock.png" />
                     </image>
                  </ImageView>
                  <ChoiceBox fx:id="timeWindowChoice" prefWidth="150.0" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
